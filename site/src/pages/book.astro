---
import Layout from '../layouts/Layout.astro';
import { getAllStylists } from '../lib/data/stylists';

// Use centralized stylist data
const stylists = getAllStylists();
---

<Layout
  title="Book Online | Virginia Page & Co. Hair Studio"
  description="Schedule your next hair appointment online. Choose your stylist and service for instant booking."
>
  <Fragment slot="head">
    <link rel="preconnect" href="https://embed.acuityscheduling.com" />
    <link rel="dns-prefetch" href="https://embed.acuityscheduling.com" />
    <link rel="preconnect" href="https://app.acuityscheduling.com" />
    <script src="https://embed.acuityscheduling.com/js/embed.js" defer></script>
  </Fragment>

  <!-- Compact Hero -->
  <section class="pt-16 pb-8 px-6 relative overflow-hidden">
    <!-- Ambient decoration -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-96 h-96 rounded-full bg-[--color-gold]/5 blur-3xl"></div>
    <div class="max-w-4xl mx-auto text-center relative">
      <h1 class="display-lg mb-4 animate-fade-up" style="font-family: var(--font-display); animation-delay: 0.1s;">
        Book Your Appointment
      </h1>
      <p class="text-lg text-[--color-taupe] max-w-2xl mx-auto mb-6 animate-fade-up leading-relaxed" style="animation-delay: 0.2s;">
        Select your stylist, or let us help you find the perfect match.
      </p>

      <!-- Stylist quick-select buttons -->
      <div class="flex flex-wrap justify-center gap-3 animate-fade-up" style="animation-delay: 0.3s;">
        <button
          type="button"
          data-stylist="all"
          class="quick-book-btn filter-pill active"
        >
          All Stylists
        </button>
        {stylists.map((stylist) => (
          <button
            type="button"
            data-stylist={stylist.name.toLowerCase()}
            aria-label={`Book appointment with ${stylist.name}`}
            class="quick-book-btn filter-pill"
          >
            {stylist.name}
          </button>
        ))}
        <button
          type="button"
          id="help-choose-btn"
          class="filter-pill help-choose-pill"
          aria-label="Help me choose a stylist"
        >
          <svg class="w-4 h-4 inline-block mr-1.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Help me choose
        </button>
      </div>

      <!-- Questionnaire Panel (hidden by default) -->
      <div id="questionnaire" class="hidden mt-8 animate-fade-up">
        <div class="max-w-md mx-auto bg-white rounded-2xl shadow-lg p-6 border border-[--color-cream-dark]">
          <h3 class="text-lg font-semibold mb-4 text-center" style="font-family: var(--font-display);">
            What brings you in today?
          </h3>
          <div class="grid gap-3">
            <button type="button" class="service-choice" data-service="haircut">
              <span class="choice-icon">‚úÇÔ∏è</span>
              <span class="choice-text">
                <strong>Haircut or Styling</strong>
                <small>Cut, trim, blowout, or special occasion</small>
              </span>
            </button>
            <button type="button" class="service-choice" data-service="color">
              <span class="choice-icon">üé®</span>
              <span class="choice-text">
                <strong>Color Services</strong>
                <small>Highlights, balayage, all-over color</small>
              </span>
            </button>
            <button type="button" class="service-choice" data-service="both">
              <span class="choice-icon">üíá‚Äç‚ôÄÔ∏è</span>
              <span class="choice-text">
                <strong>Both Cut & Color</strong>
                <small>Full transformation</small>
              </span>
            </button>
            <button type="button" class="service-choice" data-service="treatment">
              <span class="choice-icon">‚ú®</span>
              <span class="choice-text">
                <strong>Treatment</strong>
                <small>Brazilian blowout, deep conditioning</small>
              </span>
            </button>
          </div>
          <button type="button" id="close-questionnaire" class="mt-4 text-sm text-[--color-taupe] hover:text-[--color-gold] transition-colors">
            ‚Üê Back to all stylists
          </button>
        </div>
      </div>

      <!-- Recommendation Panel (hidden by default) -->
      <div id="recommendation" class="hidden mt-8 animate-fade-up">
        <div class="max-w-md mx-auto bg-gradient-to-br from-[--color-gold]/5 to-[--color-blush]/5 rounded-2xl shadow-lg p-6 border border-[--color-gold]/20">
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[--color-gold]/10 flex items-center justify-center">
              <span class="text-2xl" id="rec-icon">‚≠ê</span>
            </div>
            <p class="text-sm text-[--color-taupe] mb-2">We recommend</p>
            <h3 id="rec-name" class="text-2xl font-semibold mb-2" style="font-family: var(--font-display);">Virginia</h3>
            <p id="rec-reason" class="text-[--color-taupe] text-sm mb-4">Perfect for your haircut needs</p>
            <button type="button" id="book-recommended" class="w-full py-3 px-6 bg-[--color-gold] text-white rounded-full font-medium hover:bg-[--color-charcoal] transition-colors">
              Book with <span id="rec-name-btn">Virginia</span>
            </button>
            <button type="button" id="see-all-stylists" class="mt-3 text-sm text-[--color-taupe] hover:text-[--color-gold] transition-colors">
              Or see all stylists
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Acuity Embed -->
  <section class="pb-12 px-6 bg-[--color-cream]" id="scheduler">
    <div class="max-w-5xl mx-auto">
      <div class="acuity-container relative">
        <iframe
          id="acuity-embed"
          src="https://app.acuityscheduling.com/schedule.php?owner=38274584"
          title="Schedule Appointment with Virginia Page & Co. Hair Studio"
          width="100%"
          frameBorder="0"
          loading="lazy"
          class="acuity-iframe w-full"
        ></iframe>

        <!-- Loading overlay -->
        <div id="acuity-loader" class="absolute inset-0 bg-[--color-cream]/95 backdrop-blur-sm flex items-center justify-center transition-opacity duration-500">
          <div class="text-center">
            <div class="w-12 h-12 border-4 border-[--color-gold]/20 border-t-[--color-gold] rounded-full animate-spin mx-auto mb-4"></div>
            <p class="text-[--color-taupe] text-sm">Loading scheduler...</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Info Cards with icons -->
  <section class="py-20 px-6 bg-[--color-cream-dark]">
    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-3 gap-8" data-stagger="0.1">
        <!-- Questions -->
        <div class="info-card group text-center p-8 bg-white rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-tilt="5">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[--color-gold]/10 to-[--color-blush]/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-7 h-7 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3 transition-colors duration-300 group-hover:text-[--color-gold]" style="font-family: var(--font-display);">Questions?</h3>
          <p class="text-[--color-taupe] mb-4">Give us a call</p>
          <a href="tel:9196718353" class="text-lg font-medium hover:text-[--color-gold] transition-colors inline-flex items-center gap-2">
            (919) 671-8353
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <!-- Location -->
        <div class="info-card group text-center p-8 bg-white rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-tilt="5">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[--color-gold]/10 to-[--color-blush]/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-7 h-7 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3 transition-colors duration-300 group-hover:text-[--color-gold]" style="font-family: var(--font-display);">Location</h3>
          <address class="text-[--color-taupe] not-italic">
            104 South Main Street<br />
            Rolesville, NC 27571
          </address>
        </div>

        <!-- Cancellations -->
        <div class="info-card group text-center p-8 bg-white rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-tilt="5">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[--color-gold]/10 to-[--color-blush]/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-7 h-7 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3 transition-colors duration-300 group-hover:text-[--color-gold]" style="font-family: var(--font-display);">Cancellations</h3>
          <p class="text-[--color-taupe]">
            Need to reschedule?<br />
            Use the link in your confirmation email.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Fade up animation */
  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    animation: fade-up 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Responsive Acuity iframe */
  .acuity-container {
    position: relative;
    min-height: 700px;
  }

  .acuity-iframe {
    display: block;
    width: 100%;
    border: 0;
    /* embed.js will auto-size height; these are safe fallbacks. */
    min-height: 700px;
    background: var(--color-cream);
  }

  @media (min-width: 768px) {
    .acuity-container {
      min-height: 900px;
    }
    .acuity-iframe {
      min-height: 900px;
    }
  }

  /* Stylist filter pills */
  .filter-pill {
    padding: 0.625rem 1.5rem;
    border-radius: 9999px;
    border: 1.5px solid var(--color-cream-dark);
    background: white;
    color: var(--color-charcoal);
    font-size: 0.9375rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .filter-pill:hover {
    border-color: var(--color-gold);
    background: var(--color-gold)/10;
  }

  .filter-pill.active {
    background: var(--color-gold);
    border-color: var(--color-gold);
    color: white;
  }

  /* Help me choose button */
  .help-choose-pill {
    border-style: dashed;
    background: transparent;
  }

  .help-choose-pill:hover {
    background: var(--color-gold)/5;
  }

  /* Service choice buttons */
  .service-choice {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: var(--color-cream);
    border: 1.5px solid var(--color-cream-dark);
    border-radius: 0.75rem;
    text-align: left;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .service-choice:hover {
    border-color: var(--color-gold);
    background: white;
    transform: translateX(4px);
  }

  .choice-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .choice-text {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .choice-text strong {
    color: var(--color-charcoal);
    font-weight: 600;
  }

  .choice-text small {
    color: var(--color-taupe);
    font-size: 0.8125rem;
  }

  .hidden {
    display: none !important;
  }
</style>

<script>
  // Stylist calendar IDs
  const CALENDARS: Record<string, string> = {
    all: '',
    virginia: '13484734',
    kim: '13484780',
    alyssa: '13484805'
  };

  // Hide loader when iframe loads
  const iframe = document.getElementById('acuity-embed') as HTMLIFrameElement;
  const loader = document.getElementById('acuity-loader');

  if (iframe && loader) {
    iframe.addEventListener('load', () => {
      setTimeout(() => {
        loader.style.opacity = '0';
        setTimeout(() => loader.style.display = 'none', 500);
      }, 500);
    });
  }

  // Handle stylist filter selection
  function updateScheduler(stylistKey: string) {
    const calendarId = CALENDARS[stylistKey] || '';
    const baseUrl = 'https://app.acuityscheduling.com/schedule.php?owner=38274584';
    const newUrl = calendarId ? `${baseUrl}&calendarID=${calendarId}` : baseUrl;

    if (iframe) {
      // Show loader
      if (loader) {
        loader.style.display = 'flex';
        loader.style.opacity = '1';
      }
      iframe.src = newUrl;
    }

    // Update active button
    document.querySelectorAll('.quick-book-btn').forEach(btn => {
      btn.classList.remove('active');
    });
    const activeBtn = document.querySelector(`[data-stylist="${stylistKey}"]`);
    if (activeBtn) activeBtn.classList.add('active');
  }

  // Attach click handlers to quick book buttons
  document.querySelectorAll('.quick-book-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      const stylistKey = target.dataset.stylist || 'all';
      updateScheduler(stylistKey);

      // Smooth scroll to scheduler section
      const schedulerSection = document.getElementById('scheduler');
      if (schedulerSection) {
        schedulerSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });

  // Check for URL params to pre-select stylist
  const urlParams = new URLSearchParams(window.location.search);
  const stylistParam = urlParams.get('stylist');
  if (stylistParam && CALENDARS[stylistParam]) {
    updateScheduler(stylistParam);
  }

  // Questionnaire logic
  const helpChooseBtn = document.getElementById('help-choose-btn');
  const questionnaire = document.getElementById('questionnaire');
  const recommendation = document.getElementById('recommendation');
  const closeQuestionnaire = document.getElementById('close-questionnaire');
  const seeAllStylists = document.getElementById('see-all-stylists');
  const bookRecommended = document.getElementById('book-recommended');
  const stylistButtons = document.querySelector('.flex.flex-wrap.justify-center.gap-3');

  // Stylist recommendations based on service
  const RECOMMENDATIONS: Record<string, { name: string; key: string; icon: string; reason: string }> = {
    haircut: {
      name: 'Kim',
      key: 'kim',
      icon: '‚úÇÔ∏è',
      reason: '20 years of experience crafting the perfect cut'
    },
    color: {
      name: 'Alyssa',
      key: 'alyssa',
      icon: 'üé®',
      reason: 'Our color specialist with an eye for stunning results'
    },
    both: {
      name: 'Virginia',
      key: 'virginia',
      icon: 'üí´',
      reason: 'Owner & master stylist for your full transformation'
    },
    treatment: {
      name: 'Virginia',
      key: 'virginia',
      icon: '‚ú®',
      reason: 'Expert in Brazilian blowouts and treatments'
    }
  };

  let currentRecommendation: string | null = null;

  // Show questionnaire
  helpChooseBtn?.addEventListener('click', () => {
    questionnaire?.classList.remove('hidden');
    recommendation?.classList.add('hidden');
    // Hide regular buttons but keep help button visible
    document.querySelectorAll('.quick-book-btn').forEach(btn => {
      (btn as HTMLElement).style.display = 'none';
    });
  });

  // Close questionnaire
  function resetToButtons() {
    questionnaire?.classList.add('hidden');
    recommendation?.classList.add('hidden');
    document.querySelectorAll('.quick-book-btn').forEach(btn => {
      (btn as HTMLElement).style.display = '';
    });
  }

  closeQuestionnaire?.addEventListener('click', resetToButtons);
  seeAllStylists?.addEventListener('click', resetToButtons);

  // Handle service choice
  document.querySelectorAll('.service-choice').forEach(choice => {
    choice.addEventListener('click', (e) => {
      const service = (e.currentTarget as HTMLElement).dataset.service;
      if (!service || !RECOMMENDATIONS[service]) return;

      const rec = RECOMMENDATIONS[service];
      currentRecommendation = rec.key;

      // Update recommendation panel
      const recIcon = document.getElementById('rec-icon');
      const recName = document.getElementById('rec-name');
      const recReason = document.getElementById('rec-reason');
      const recNameBtn = document.getElementById('rec-name-btn');

      if (recIcon) recIcon.textContent = rec.icon;
      if (recName) recName.textContent = rec.name;
      if (recReason) recReason.textContent = rec.reason;
      if (recNameBtn) recNameBtn.textContent = rec.name;

      // Show recommendation, hide questionnaire
      questionnaire?.classList.add('hidden');
      recommendation?.classList.remove('hidden');
    });
  });

  // Book with recommended stylist
  bookRecommended?.addEventListener('click', () => {
    if (currentRecommendation) {
      updateScheduler(currentRecommendation);
      resetToButtons();
      // Update active button
      document.querySelectorAll('.quick-book-btn').forEach(btn => {
        btn.classList.remove('active');
        if ((btn as HTMLElement).dataset.stylist === currentRecommendation) {
          btn.classList.add('active');
        }
      });
      // Scroll to scheduler
      const schedulerSection = document.getElementById('scheduler');
      if (schedulerSection) {
        schedulerSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    }
  });
</script>
