---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Book Online | Virginia Page & Co. Hair Studio"
  description="Schedule your next hair appointment online. Choose your stylist and service for instant booking."
>
  <!-- Hero -->
  <section class="pt-16 pb-12 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Schedule</span>
      <h1 class="display-lg mb-8" style="font-family: var(--font-display);">
        Book Your Appointment
      </h1>
      <p class="text-xl text-[--color-taupe] max-w-2xl mx-auto mb-10">
        Select your service and preferred stylist to schedule your visit.
      </p>

      <!-- Stylist Quick Links -->
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="https://vahair.as.me/?calendarID=7785532"
          target="_blank"
          class="btn btn-outline"
        >
          Book with Virginia
        </a>
        <a
          href="https://vahair.as.me/?calendarID=8172243"
          target="_blank"
          class="btn btn-outline"
        >
          Book with Kim
        </a>
      </div>
    </div>
  </section>

  <!-- Acuity Embed -->
  <section class="py-12 px-6">
    <div class="max-w-5xl mx-auto">
      <div class="bg-white shadow-lg overflow-hidden" style="min-height: 850px;">
        <iframe
          src="https://vahair.as.me/"
          title="Schedule Appointment"
          width="100%"
          height="900"
          frameBorder="0"
          class="w-full"
          style="border: none; min-height: 850px;"
        ></iframe>
      </div>
    </div>
  </section>

  <!-- Info Cards -->
  <section class="py-20 px-6 bg-[--color-cream-dark]">
    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Questions -->
        <div class="text-center p-8">
          <div class="w-12 h-12 mx-auto mb-6 rounded-full bg-[--color-gold]/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3" style="font-family: var(--font-display);">Questions?</h3>
          <p class="text-[--color-taupe] mb-4">Give us a call</p>
          <a href="tel:9196718353" class="text-lg font-medium hover:text-[--color-gold] transition-colors">
            (919) 671-8353
          </a>
        </div>

        <!-- Location -->
        <div class="text-center p-8">
          <div class="w-12 h-12 mx-auto mb-6 rounded-full bg-[--color-gold]/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3" style="font-family: var(--font-display);">Location</h3>
          <p class="text-[--color-taupe]">
            104 South Main Street<br />
            Rolesville, NC 27571
          </p>
        </div>

        <!-- Cancellations -->
        <div class="text-center p-8">
          <div class="w-12 h-12 mx-auto mb-6 rounded-full bg-[--color-gold]/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3" style="font-family: var(--font-display);">Cancellations</h3>
          <p class="text-[--color-taupe]">
            Need to reschedule?<br />
            Use the link in your confirmation email.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
