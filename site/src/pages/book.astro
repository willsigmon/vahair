---
import Layout from '../layouts/Layout.astro';
import StylistAvailabilityCard from '../components/booking/StylistAvailabilityCard.astro';
import { getAllStylists } from '../lib/data/stylists';

// Use centralized stylist data
const stylists = getAllStylists();
---

<Layout
  title="Book Online | Virginia Page & Co. Hair Studio"
  description="Schedule your next hair appointment online. Choose your stylist and service for instant booking."
>
  <!-- Hero with floating animation -->
  <section class="pt-16 pb-12 px-6 relative overflow-hidden">
    <!-- Floating decorative elements - enhanced gold opacity -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="floating-shape shape-1 absolute w-64 h-64 rounded-full bg-[--color-gold]/15 blur-3xl"></div>
      <div class="floating-shape shape-2 absolute w-48 h-48 rounded-full bg-[--color-blush]/20 blur-2xl"></div>
      <div class="floating-shape shape-3 absolute w-32 h-32 rounded-full bg-[--color-gold]/20 blur-xl"></div>
    </div>

    <div class="max-w-4xl mx-auto text-center relative">
      <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block animate-fade-up" style="animation-delay: 0.1s;">
        Schedule
      </span>
      <h1 class="display-lg mb-8 animate-fade-up" style="font-family: var(--font-display); animation-delay: 0.2s;">
        Book Your Appointment
      </h1>
      <p class="text-xl text-[--color-taupe] max-w-2xl mx-auto mb-10 animate-fade-up" style="animation-delay: 0.3s;">
        Select your service and preferred stylist to schedule your visit.
      </p>

      <!-- Animated quick links with gold glow -->
      <div class="flex flex-wrap justify-center gap-4 animate-fade-up" style="animation-delay: 0.4s;">
        {stylists.map((stylist, i) => (
          <a
            href={stylist.bookingUrl}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Book appointment with ${stylist.name} (opens in new window)`}
            class="btn btn-outline group relative overflow-hidden hover:shadow-[0_0_25px_rgba(196,169,98,0.3)] transition-shadow duration-300"
            style={`animation-delay: ${0.4 + i * 0.1}s;`}
          >
            <span class="relative z-10">Book with {stylist.name}</span>
            <span class="absolute inset-0 bg-[--color-gold] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></span>
            <span class="absolute inset-0 flex items-center justify-center text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-100">
              Book with {stylist.name}
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Who's Available - Fancy Cards -->
  <section class="py-16 px-6 bg-gradient-to-b from-[--color-cream] to-[--color-cream-dark]">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="text-3xl mb-4" style="font-family: var(--font-display);" data-reveal>
          Who's Available?
        </h2>
        <p class="text-[--color-taupe]" data-reveal data-reveal-delay="100">
          See real-time availability and book instantly
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" data-stagger="0.15">
        {stylists.map((stylist) => (
          <StylistAvailabilityCard {...stylist} />
        ))}
      </div>

      <!-- Fun fact callout -->
      <div class="mt-10 text-center" data-reveal data-reveal-delay="300">
        <p class="inline-flex items-center gap-2 text-sm text-[--color-taupe] bg-white/50 px-4 py-2 rounded-full">
          <svg class="w-4 h-4 text-[--color-gold]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
          </svg>
          <span>Most clients book within <strong>24 hours</strong> of their preferred time</span>
        </p>
      </div>
    </div>
  </section>

  <!-- Acuity Embed with better container -->
  <section class="py-12 px-6 bg-[--color-cream]">
    <div class="max-w-5xl mx-auto">
      <div class="relative">
        <!-- Decorative border -->
        <div class="absolute -inset-3 bg-gradient-to-r from-[--color-gold]/20 via-[--color-blush]/20 to-[--color-gold]/20 rounded-2xl blur-sm"></div>
        <div class="acuity-container relative bg-white rounded-xl shadow-2xl shadow-[--color-charcoal]/5 overflow-hidden">
          <iframe
            src="https://app.acuityscheduling.com/schedule.php?owner=38274584"
            title="Schedule Appointment with Virginia Page & Co. Hair Studio"
            width="100%"
            frameBorder="0"
            loading="lazy"
            class="acuity-iframe w-full"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Info Cards with icons -->
  <section class="py-20 px-6 bg-[--color-cream-dark]">
    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-3 gap-8" data-stagger="0.1">
        <!-- Questions -->
        <div class="info-card group text-center p-8 bg-white rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-tilt="5">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[--color-gold]/10 to-[--color-blush]/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-7 h-7 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3 transition-colors duration-300 group-hover:text-[--color-gold]" style="font-family: var(--font-display);">Questions?</h3>
          <p class="text-[--color-taupe] mb-4">Give us a call</p>
          <a href="tel:9196718353" class="text-lg font-medium hover:text-[--color-gold] transition-colors inline-flex items-center gap-2">
            (919) 671-8353
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <!-- Location -->
        <div class="info-card group text-center p-8 bg-white rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-tilt="5">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[--color-gold]/10 to-[--color-blush]/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-7 h-7 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3 transition-colors duration-300 group-hover:text-[--color-gold]" style="font-family: var(--font-display);">Location</h3>
          <address class="text-[--color-taupe] not-italic">
            104 South Main Street<br />
            Rolesville, NC 27571
          </address>
        </div>

        <!-- Cancellations -->
        <div class="info-card group text-center p-8 bg-white rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-tilt="5">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[--color-gold]/10 to-[--color-blush]/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-7 h-7 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3 transition-colors duration-300 group-hover:text-[--color-gold]" style="font-family: var(--font-display);">Cancellations</h3>
          <p class="text-[--color-taupe]">
            Need to reschedule?<br />
            Use the link in your confirmation email.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Floating shapes animation */
  .floating-shape {
    animation: float 20s ease-in-out infinite;
  }

  .shape-1 {
    top: 10%;
    left: 5%;
    animation-delay: 0s;
  }

  .shape-2 {
    top: 60%;
    right: 10%;
    animation-delay: -7s;
  }

  .shape-3 {
    bottom: 20%;
    left: 30%;
    animation-delay: -14s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(30px, -30px) rotate(5deg);
    }
    50% {
      transform: translate(0, -50px) rotate(0deg);
    }
    75% {
      transform: translate(-30px, -20px) rotate(-5deg);
    }
  }

  /* Fade up animation */
  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    animation: fade-up 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Responsive Acuity iframe */
  .acuity-container {
    min-height: 600px;
  }

  .acuity-iframe {
    border: none;
    height: calc(100svh - 120px);
    min-height: 600px;
    max-height: 1000px;
  }

  @media (min-width: 768px) {
    .acuity-container {
      min-height: 800px;
    }
    .acuity-iframe {
      height: 900px;
      min-height: 800px;
    }
  }
</style>
