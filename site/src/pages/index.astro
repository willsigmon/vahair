---
import Layout from '../layouts/Layout.astro';
import NextSlotBadge from '../components/availability/NextSlotBadge.astro';
import { getHomepageStylists } from '../lib/data/stylists';

// Use centralized stylist data
const stylists = getHomepageStylists();
---

<Layout title="Virginia Page & Co. Hair Studio | Rolesville, NC Hair Salon">
  <!-- Hero Section - Full Viewport -->
  <section class="relative min-h-[100svh] flex items-center justify-center -mt-24">
    <!-- Background -->
    <div class="absolute inset-0">
      <img
        src="/images/hero.jpg"
        alt="Virginia Page & Co. Hair Studio - professional styling environment"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/45"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center text-white px-6 max-w-5xl">
      <p class="text-lg md:text-xl tracking-widest uppercase mb-6 animate-fade-up hero-text-shadow" style="animation-delay: 0.2s;">
        Rolesville, NC
      </p>
      <h1 class="display-xl mb-6 animate-fade-up hero-text-shadow leading-[0.9]" style="animation-delay: 0.4s; font-family: var(--font-display);">
        <span class="italic font-light">If it makes you</span><br />
        <span class="font-medium">feel beautiful</span>
      </h1>
      <p class="text-4xl md:text-6xl font-light tracking-wide mb-12 animate-fade-up" style="animation-delay: 0.6s; font-family: var(--font-display);">
        <span class="text-glow-breathe" style="color: #C4A962;">Do it.</span>
      </p>
      <div class="animate-fade-up" style="animation-delay: 0.8s;">
        <a href="/book" class="btn btn-primary btn-hero-cta bg-[--color-cream] text-[--color-charcoal] border-[--color-cream] hover:bg-[--color-gold] hover:border-[--color-gold] text-base px-8 py-4">
          Book Your Appointment
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-[--color-cream]/60">
      <div class="w-px h-16 bg-gradient-to-b from-current to-transparent mx-auto mb-2"></div>
      <span class="text-xs tracking-widest uppercase">Scroll</span>
    </div>
  </section>

  <!-- Social Proof Bar -->
  <section class="py-12 md:py-16 px-6 bg-[--color-charcoal] text-[--color-cream]">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <p class="text-3xl md:text-4xl font-light mb-1" style="font-family: var(--font-display);">40+</p>
          <p class="text-sm text-[--color-taupe] uppercase tracking-wider">Years Combined Experience</p>
        </div>
        <div>
          <p class="text-3xl md:text-4xl font-light mb-1" style="font-family: var(--font-display);">3</p>
          <p class="text-sm text-[--color-taupe] uppercase tracking-wider">Expert Stylists</p>
        </div>
        <div>
          <p class="text-3xl md:text-4xl font-light mb-1 text-[--color-gold]" role="img" aria-label="5 out of 5 stars">★★★★★</p>
          <p class="text-sm text-[--color-taupe] uppercase tracking-wider">5-Star Reviews</p>
        </div>
        <div>
          <p class="text-3xl md:text-4xl font-light mb-1" style="font-family: var(--font-display);">♥</p>
          <p class="text-sm text-[--color-taupe] uppercase tracking-wider">Downtown Rolesville</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-32 px-6 bg-[--color-cream-dark]">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center max-w-2xl mx-auto mb-20">
        <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Our Services</span>
        <h2 class="display-md mb-6" style="font-family: var(--font-display);">
          Crafted with care, tailored to you
        </h2>
        <p class="text-[--color-taupe] text-lg">
          From precision cuts to stunning color transformations
        </p>
      </div>

      <!-- Service Cards -->
      <div class="grid md:grid-cols-3 gap-8 mb-16" data-stagger="0.15">
        <!-- Haircuts -->
        <div class="group card p-10 text-center hover-lift border-t-4 border-t-[--color-gold] card-glow-gold" data-tilt="8">
          <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-[--color-gold]/10 flex items-center justify-center icon-ring-gold">
            <svg class="w-8 h-8 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.121 14.121L19 19m-7-7l7-7m-7 7l-2.879 2.879M12 12L9.121 9.121m0 5.758a3 3 0 10-4.243 4.243 3 3 0 004.243-4.243zm0-5.758a3 3 0 10-4.243-4.243 3 3 0 004.243 4.243z"/>
            </svg>
          </div>
          <h3 class="text-2xl mb-4 group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">Haircuts</h3>
          <p class="text-[--color-taupe] mb-6">Precision cuts tailored to your unique style, face shape, and lifestyle.</p>
          <p class="text-3xl font-medium text-[--color-gold] text-glow-gold">From $30</p>
        </div>

        <!-- Color -->
        <div class="group card p-10 text-center hover-lift border-t-4 border-t-[--color-blush] card-glow-gold" data-tilt="8">
          <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-[--color-blush]/30 flex items-center justify-center icon-ring-gold">
            <svg class="w-8 h-8 text-[--color-taupe] group-hover:text-[--color-gold] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
            </svg>
          </div>
          <h3 class="text-2xl mb-4 group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">Hair Color</h3>
          <p class="text-[--color-taupe] mb-6">From subtle highlights to bold transformations that turn heads.</p>
          <p class="text-3xl font-medium text-[--color-gold] text-glow-gold">From $95</p>
        </div>

        <!-- Treatments -->
        <div class="group card p-10 text-center hover-lift border-t-4 border-t-[--color-taupe] card-glow-gold" data-tilt="8">
          <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-[--color-taupe]/10 flex items-center justify-center icon-ring-gold">
            <svg class="w-8 h-8 text-[--color-taupe] group-hover:text-[--color-gold] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-2xl mb-4 group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">Treatments</h3>
          <p class="text-[--color-taupe] mb-6">Brazilian blowouts and specialty treatments for silky, frizz-free hair.</p>
          <p class="text-3xl font-medium text-[--color-gold] text-glow-gold">From $325</p>
        </div>
      </div>

      <div class="text-center" data-reveal>
        <a href="/services" class="btn btn-outline" data-magnetic>
          View Full Menu
        </a>
      </div>
    </div>
  </section>

  <!-- Stylists Preview -->
  <section class="py-32 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {stylists.map((stylist) => (
          <div class="group relative overflow-hidden bg-[--color-cream-dark] border-glow-gold">
            <div class="aspect-square">
              <img
                src={stylist.image}
                alt={`${stylist.fullName}, ${stylist.role}`}
                class:list={[
                  'w-full h-full object-cover transition-transform duration-700 group-hover:scale-105',
                  stylist.imagePosition,
                ]}
              />
            </div>
            <!-- Feathered edge above solid panel -->
            <div class="absolute bottom-[45%] left-0 right-0 h-[12%]" style="background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.85))"></div>
            <!-- Solid dark panel for text -->
            <div class="absolute bottom-0 left-0 right-0 bg-black/85 p-8 text-[--color-cream]">
              <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-2 block font-semibold">
                {stylist.role}
              </span>
              <h3 class="text-3xl mb-2" style="font-family: var(--font-display);">
                {stylist.fullName}
              </h3>
              <p class="text-[--color-cream]/80 mb-2">{stylist.experience}</p>
              <NextSlotBadge calendarId={stylist.id} class="mb-4" />
              <a
                href={stylist.bookingUrl}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Book appointment with ${stylist.name} (opens in new window)`}
                class="btn bg-[--color-gold] text-[--color-charcoal] border-[--color-gold] hover:bg-[--color-gold-light] hover:border-[--color-gold-light] hover:shadow-[0_0_30px_rgba(196,169,98,0.4)] transition-all duration-300"
              >
                Book with {stylist.name}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-24 px-6 bg-[--color-cream-dark]">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">What Clients Say</span>
        <h2 class="display-md" style="font-family: var(--font-display);">
          Loved by our community
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-xl shadow-sm">
          <div class="flex gap-1 mb-4 text-[--color-gold]" role="img" aria-label="5 out of 5 stars">
            <span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span>
          </div>
          <p class="text-[--color-taupe] mb-6 italic">
            "Virginia is amazing! She listens to what you want and delivers every time. I've been coming here for years and wouldn't go anywhere else."
          </p>
          <p class="font-medium">— Sarah M.</p>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-sm">
          <div class="flex gap-1 mb-4 text-[--color-gold]" role="img" aria-label="5 out of 5 stars">
            <span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span>
          </div>
          <p class="text-[--color-taupe] mb-6 italic">
            "Best salon in Rolesville! Kim did an incredible job with my highlights. The atmosphere is so welcoming and relaxing."
          </p>
          <p class="font-medium">— Jennifer L.</p>
        </div>

        <div class="bg-white p-8 rounded-xl shadow-sm">
          <div class="flex gap-1 mb-4 text-[--color-gold]" role="img" aria-label="5 out of 5 stars">
            <span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span>
          </div>
          <p class="text-[--color-taupe] mb-6 italic">
            "Alyssa transformed my hair! Her color work is truly artistic. I get compliments everywhere I go now."
          </p>
          <p class="font-medium">— Michelle R.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Hours & Location -->
  <section class="py-32 px-6 bg-[--color-charcoal] text-[--color-cream]">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Hours -->
        <div>
          <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Hours</span>
          <h2 class="display-md mb-12" style="font-family: var(--font-display);">
            When to find us
          </h2>

          <div class="space-y-4 text-lg">
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light] text-[--color-taupe]">
              <span>Monday</span>
              <span>Closed</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Tuesday</span>
              <span>10:15 AM – 5:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Wednesday</span>
              <span>10:15 AM – 4:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Thursday</span>
              <span>10:30 AM – 6:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Friday</span>
              <span>10:00 AM – 2:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light] text-[--color-taupe]">
              <span>Saturday – Sunday</span>
              <span>Closed</span>
            </div>
          </div>
        </div>

        <!-- Location -->
        <div>
          <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Location</span>
          <h2 class="display-md mb-12" style="font-family: var(--font-display);">
            Where to find us
          </h2>

          <address class="not-italic text-xl text-[--color-cream]/80 mb-8 leading-relaxed">
            104 South Main Street<br />
            Rolesville, NC 27571
          </address>

          <div class="space-y-4 mb-10">
            <a href="tel:9196718353" class="block text-xl hover:text-[--color-gold] transition-colors">
              (919) 671-8353
            </a>
            <a href="mailto:vacohairstudio@gmail.com" class="block text-xl hover:text-[--color-gold] transition-colors">
              vacohairstudio@gmail.com
            </a>
          </div>

          <a
            href="https://www.google.com/maps/search/?api=1&query=104+South+Main+Street+Rolesville+NC+27571"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Get directions to Virginia Page & Co. on Google Maps (opens in new window)"
            class="btn btn-outline border-[--color-cream] text-[--color-cream] hover:bg-[--color-cream] hover:text-[--color-charcoal]"
          >
            Get Directions
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Transition -->
  <div class="h-24 bg-gradient-to-b from-[--color-charcoal] to-[--color-cream-dark]"></div>

  <!-- Instagram Section -->
  <section class="py-24 px-6 bg-[--color-cream-dark]">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center max-w-2xl mx-auto mb-16">
        <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Follow Along</span>
        <h2 class="display-md mb-6" style="font-family: var(--font-display);">
          @vahairco
        </h2>
        <p class="text-[--color-taupe] text-lg">
          See our latest work and get inspired for your next look
        </p>
      </div>

      <!-- Instagram Feed Placeholder -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
        <a href="https://instagram.com/vahairco" target="_blank" rel="noopener noreferrer" class="aspect-square bg-[--color-cream] overflow-hidden group" aria-label="Virginia's precision haircut work on Instagram (opens in new window)">
          <img src="/images/virginia.jpg" alt="Virginia Page Watkins performing a precision haircut" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
        </a>
        <a href="https://instagram.com/vahairco" target="_blank" rel="noopener noreferrer" class="aspect-square bg-[--color-cream] overflow-hidden group" aria-label="Kim's color styling on Instagram (opens in new window)">
          <img src="/images/kim.jpg" alt="Kim Latham showcasing professional hair color" class="w-full h-full object-cover object-[center_20%] transition-transform duration-500 group-hover:scale-110" />
        </a>
        <a href="https://instagram.com/vahairco" target="_blank" rel="noopener noreferrer" class="aspect-square bg-[--color-cream] overflow-hidden group" aria-label="Our salon interior on Instagram (opens in new window)">
          <img src="/images/salon.jpg" alt="Inside Virginia Page & Co. Hair Studio in downtown Rolesville" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
        </a>
        <a href="https://instagram.com/vahairco" target="_blank" rel="noopener noreferrer" class="aspect-square bg-[--color-cream] overflow-hidden group flex items-center justify-center" aria-label="View more on Instagram (opens in new window)">
          <div class="text-center p-6">
            <svg class="w-12 h-12 mx-auto mb-4 text-[--color-charcoal]" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            <span class="text-sm font-medium text-[--color-charcoal]">View More</span>
          </div>
        </a>
      </div>

      <div class="text-center">
        <a href="https://instagram.com/vahairco" target="_blank" rel="noopener noreferrer" class="btn btn-outline" data-magnetic aria-label="Follow Virginia Page & Co. on Instagram (opens in new window)">
          Follow on Instagram
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-32 px-6 text-center bg-gradient-to-b from-[--color-cream-dark] to-[--color-cream] relative overflow-hidden">
    <!-- Ambient gold glow background -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 rounded-full bg-[--color-gold]/10 blur-3xl"></div>
    </div>
    <div class="max-w-3xl mx-auto relative">
      <div class="divider mx-auto mb-8"></div>
      <h2 class="display-lg mb-8 text-balance text-glow-gold" style="font-family: var(--font-display);">
        Ready for your transformation?
      </h2>
      <p class="text-xl text-[--color-taupe] mb-12 max-w-xl mx-auto">
        Book your appointment today and let us help you feel beautiful.
      </p>
      <a href="/book" class="btn btn-primary text-base px-10 py-4 glow-pulse hover:shadow-[0_0_40px_rgba(196,169,98,0.5)]">
        Book Your Appointment
      </a>
    </div>
  </section>
</Layout>
