---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Virginia Page & Co. Hair Studio | Rolesville, NC Hair Salon">
  <!-- Hero Section - Full Viewport -->
  <section class="relative min-h-[100svh] flex items-center justify-center -mt-24">
    <!-- Background -->
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1522337360788-8b13dee7a37e?auto=format&fit=crop&w=1920&q=80"
        alt=""
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-[--color-charcoal]/60 via-[--color-charcoal]/40 to-[--color-charcoal]/70"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center text-[--color-cream] px-6 max-w-5xl">
      <p class="text-lg md:text-xl tracking-widest uppercase mb-6 opacity-80 animate-fade-up" style="animation-delay: 0.2s;">
        Rolesville, NC
      </p>
      <h1 class="display-xl mb-8 animate-fade-up" style="animation-delay: 0.4s; font-family: var(--font-display);">
        <span class="italic font-light">If it makes you</span><br />
        <span class="font-medium">feel beautiful</span>
      </h1>
      <p class="text-4xl md:text-6xl font-light tracking-wide mb-12 animate-fade-up" style="animation-delay: 0.6s; font-family: var(--font-display);">
        Do it<span class="text-[--color-gold]">.</span>
      </p>
      <div class="animate-fade-up" style="animation-delay: 0.8s;">
        <a href="/book" class="btn btn-primary bg-[--color-cream] text-[--color-charcoal] border-[--color-cream] hover:bg-[--color-gold] hover:border-[--color-gold]">
          Book Your Appointment
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-[--color-cream]/60">
      <div class="w-px h-16 bg-gradient-to-b from-current to-transparent mx-auto mb-2"></div>
      <span class="text-xs tracking-widest uppercase">Scroll</span>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="py-32 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">
        <!-- Text -->
        <div class="max-w-xl">
          <div class="divider mb-8" data-reveal></div>
          <h2 class="display-md mb-8 text-balance" style="font-family: var(--font-display);" data-reveal data-reveal-delay="100">
            Where beauty meets expertise in the heart of downtown Rolesville
          </h2>
          <p class="text-[--color-taupe] text-lg leading-relaxed mb-6" data-reveal data-reveal-delay="200">
            With over 30 years of combined experience, Virginia and Kim bring artistry, expertise, and genuine care to every client who sits in their chairs.
          </p>
          <p class="text-[--color-taupe] text-lg leading-relaxed mb-10" data-reveal data-reveal-delay="300">
            We believe everyone deserves to express themselves through their hair and leave feeling like the best version of themselves.
          </p>
          <a href="/about" class="btn btn-ghost" data-reveal data-reveal-delay="400" data-magnetic>
            Meet Your Stylists
          </a>
        </div>

        <!-- Image Grid -->
        <div class="grid grid-cols-2 gap-4">
          <div class="img-frame aspect-[3/4] bg-[--color-cream-dark] mt-12" data-img-reveal data-tilt="5">
            <img
              src="https://images.unsplash.com/photo-1595476108010-b4d1f102b1b1?auto=format&fit=crop&w=600&q=80"
              alt="Hair styling"
              class="w-full h-full object-cover"
            />
          </div>
          <div class="img-frame aspect-[3/4] bg-[--color-cream-dark]" data-img-reveal data-tilt="5">
            <img
              src="https://images.unsplash.com/photo-1560066984-138dadb4c035?auto=format&fit=crop&w=600&q=80"
              alt="Salon interior"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-32 px-6 bg-[--color-cream-dark]">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center max-w-2xl mx-auto mb-20">
        <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Our Services</span>
        <h2 class="display-md mb-6" style="font-family: var(--font-display);">
          Crafted with care, tailored to you
        </h2>
        <p class="text-[--color-taupe] text-lg">
          From precision cuts to stunning color transformations
        </p>
      </div>

      <!-- Service Cards -->
      <div class="grid md:grid-cols-3 gap-8 mb-16" data-stagger="0.15">
        <!-- Haircuts -->
        <div class="card p-10 text-center hover-lift" data-tilt="8">
          <span class="text-5xl mb-6 block" style="font-family: var(--font-display);">01</span>
          <h3 class="text-2xl mb-4" style="font-family: var(--font-display);">Haircuts</h3>
          <p class="text-[--color-taupe] mb-6">Precision cuts tailored to your unique style, face shape, and lifestyle.</p>
          <p class="text-2xl font-light text-[--color-gold]">From $30</p>
        </div>

        <!-- Color -->
        <div class="card p-10 text-center hover-lift" data-tilt="8">
          <span class="text-5xl mb-6 block" style="font-family: var(--font-display);">02</span>
          <h3 class="text-2xl mb-4" style="font-family: var(--font-display);">Hair Color</h3>
          <p class="text-[--color-taupe] mb-6">From subtle highlights to bold transformations that turn heads.</p>
          <p class="text-2xl font-light text-[--color-gold]">From $95</p>
        </div>

        <!-- Treatments -->
        <div class="card p-10 text-center hover-lift" data-tilt="8">
          <span class="text-5xl mb-6 block" style="font-family: var(--font-display);">03</span>
          <h3 class="text-2xl mb-4" style="font-family: var(--font-display);">Treatments</h3>
          <p class="text-[--color-taupe] mb-6">Brazilian blowouts and specialty treatments for silky, frizz-free hair.</p>
          <p class="text-2xl font-light text-[--color-gold]">From $325</p>
        </div>
      </div>

      <div class="text-center" data-reveal>
        <a href="/services" class="btn btn-outline" data-magnetic>
          View Full Menu
        </a>
      </div>
    </div>
  </section>

  <!-- Stylists Preview -->
  <section class="py-32 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Virginia -->
        <div class="group relative overflow-hidden bg-[--color-cream-dark]">
          <div class="aspect-[4/5]">
            <img
              src="https://images.unsplash.com/photo-1580618672591-eb180b1a973f?auto=format&fit=crop&w=800&q=80"
              alt="Virginia"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-[--color-charcoal]/90 via-transparent to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-8 text-[--color-cream]">
            <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-2 block">Owner & Stylist</span>
            <h3 class="text-3xl mb-2" style="font-family: var(--font-display);">Virginia Page Watkins</h3>
            <p class="text-[--color-cream]/70 mb-4">14 years of experience</p>
            <a
              href="https://vahair.as.me/?calendarID=7785532"
              target="_blank"
              class="btn btn-outline border-[--color-cream] text-[--color-cream] hover:bg-[--color-cream] hover:text-[--color-charcoal]"
            >
              Book with Virginia
            </a>
          </div>
        </div>

        <!-- Kim -->
        <div class="group relative overflow-hidden bg-[--color-cream-dark]">
          <div class="aspect-[4/5]">
            <img
              src="https://images.unsplash.com/photo-1559599101-f09722fb4948?auto=format&fit=crop&w=800&q=80"
              alt="Kim"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-[--color-charcoal]/90 via-transparent to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-8 text-[--color-cream]">
            <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-2 block">Stylist</span>
            <h3 class="text-3xl mb-2" style="font-family: var(--font-display);">Kim Latham</h3>
            <p class="text-[--color-cream]/70 mb-4">20 years of experience</p>
            <a
              href="https://vahair.as.me/?calendarID=8172243"
              target="_blank"
              class="btn btn-outline border-[--color-cream] text-[--color-cream] hover:bg-[--color-cream] hover:text-[--color-charcoal]"
            >
              Book with Kim
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Hours & Location -->
  <section class="py-32 px-6 bg-[--color-charcoal] text-[--color-cream]">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Hours -->
        <div>
          <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Hours</span>
          <h2 class="display-md mb-12" style="font-family: var(--font-display);">
            When to find us
          </h2>

          <div class="space-y-4 text-lg">
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light] text-[--color-taupe]">
              <span>Monday</span>
              <span>Closed</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Tuesday</span>
              <span>10:15 AM – 5:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Wednesday</span>
              <span>10:15 AM – 4:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Thursday</span>
              <span>10:30 AM – 6:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Friday</span>
              <span>10:00 AM – 2:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light] text-[--color-taupe]">
              <span>Saturday – Sunday</span>
              <span>Closed</span>
            </div>
          </div>
        </div>

        <!-- Location -->
        <div>
          <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Location</span>
          <h2 class="display-md mb-12" style="font-family: var(--font-display);">
            Where to find us
          </h2>

          <address class="not-italic text-xl text-[--color-cream]/80 mb-8 leading-relaxed">
            104 South Main Street<br />
            Rolesville, NC 27571
          </address>

          <div class="space-y-4 mb-10">
            <a href="tel:9196718353" class="block text-xl hover:text-[--color-gold] transition-colors">
              (919) 671-8353
            </a>
            <a href="mailto:vacohairstudio@gmail.com" class="block text-xl hover:text-[--color-gold] transition-colors">
              vacohairstudio@gmail.com
            </a>
          </div>

          <a
            href="https://www.google.com/maps/search/?api=1&query=104+South+Main+Street+Rolesville+NC+27571"
            target="_blank"
            class="btn btn-outline border-[--color-cream] text-[--color-cream] hover:bg-[--color-cream] hover:text-[--color-charcoal]"
          >
            Get Directions
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-32 px-6 text-center">
    <div class="max-w-3xl mx-auto">
      <h2 class="display-lg mb-8 text-balance" style="font-family: var(--font-display);">
        Ready for your transformation?
      </h2>
      <p class="text-xl text-[--color-taupe] mb-12 max-w-xl mx-auto">
        Book your appointment today and let us help you feel beautiful.
      </p>
      <a href="/book" class="btn btn-primary">
        Book Your Appointment
      </a>
    </div>
  </section>
</Layout>
