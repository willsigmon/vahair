---
/**
 * Generic loading skeleton component
 */
interface Props {
  class?: string;
  width?: string;
  height?: string;
  rounded?: 'sm' | 'md' | 'lg' | 'full';
}

const { class: className = '', width = '100%', height = '1rem', rounded = 'md' } = Astro.props;

const roundedClass = {
  sm: 'rounded-sm',
  md: 'rounded',
  lg: 'rounded-lg',
  full: 'rounded-full',
}[rounded];
---

<div
  class:list={[
    'animate-pulse bg-[--color-cream-dark]',
    roundedClass,
    className,
  ]}
  style={`width: ${width}; height: ${height};`}
/>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
