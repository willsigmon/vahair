---
/**
 * Loading skeleton for availability badge
 */
import Skeleton from '../ui/Skeleton.astro';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['inline-flex items-center gap-2', className]}>
  <Skeleton width="0.5rem" height="0.5rem" rounded="full" />
  <Skeleton width="6rem" height="0.875rem" rounded="sm" />
</div>
