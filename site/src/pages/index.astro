---
import Layout from '../layouts/Layout.astro';
import NextSlotBadge from '../components/availability/NextSlotBadge.astro';
import { getHomepageStylists } from '../lib/data/stylists';

// Use centralized stylist data
const stylists = getHomepageStylists();
---

<Layout title="Virginia Page & Co. Hair Studio | Rolesville, NC Hair Salon">
  <!-- Hero Section - Full Viewport -->
  <section class="relative min-h-[100svh] flex items-center justify-center -mt-24">
    <!-- Background -->
    <div class="absolute inset-0">
      <img
        src="/images/hero.jpg"
        alt="Virginia Page & Co. Hair Studio - professional styling environment"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/45"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center text-white px-6 max-w-5xl">
      <p class="text-lg md:text-xl tracking-widest uppercase mb-6 animate-fade-up hero-text-shadow" style="animation-delay: 0.2s;">
        Rolesville, NC
      </p>
      <h1 class="display-xl mb-6 animate-fade-up hero-text-shadow leading-[0.9]" style="animation-delay: 0.4s; font-family: var(--font-display);">
        <span class="italic font-light">If it makes you</span><br />
        <span class="font-medium">feel beautiful</span>
      </h1>
      <p class="text-4xl md:text-6xl font-light tracking-wide mb-12 animate-fade-up" style="animation-delay: 0.6s; font-family: var(--font-display);">
        <span class="text-glow-breathe" style="color: #C4A962;">Do it.</span>
      </p>
      <div class="animate-fade-up" style="animation-delay: 0.8s;">
        <a href="/book" class="btn btn-primary btn-hero-cta bg-[--color-cream] text-[--color-charcoal] border-[--color-cream] hover:bg-[--color-gold] hover:border-[--color-gold] text-base px-8 py-4">
          Book Your Appointment
        </a>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-[--color-cream]/60">
      <div class="w-px h-16 bg-gradient-to-b from-current to-transparent mx-auto mb-2"></div>
      <span class="text-xs tracking-widest uppercase">Scroll</span>
    </div>
  </section>

  <!-- Social Proof Bar -->
  <section class="py-16 md:py-20 px-6 bg-[--color-charcoal] text-[--color-cream] relative overflow-hidden">
    <!-- Subtle ambient glow -->
    <div class="absolute top-1/2 left-1/4 -translate-y-1/2 w-64 h-64 rounded-full bg-[--color-gold]/5 blur-3xl"></div>
    <div class="absolute top-1/2 right-1/4 -translate-y-1/2 w-64 h-64 rounded-full bg-[--color-gold]/5 blur-3xl"></div>
    <div class="max-w-5xl mx-auto relative">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 text-center">
        <div class="group">
          <p class="text-4xl md:text-5xl font-light mb-2 text-[--color-cream] group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">40<span class="text-[--color-gold]">+</span></p>
          <p class="text-xs text-[--color-cream]/60 uppercase tracking-widest">Years Combined<br class="hidden md:block" /> Experience</p>
        </div>
        <div class="group">
          <p class="text-4xl md:text-5xl font-light mb-2 text-[--color-cream] group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">3</p>
          <p class="text-xs text-[--color-cream]/60 uppercase tracking-widest">Expert<br class="hidden md:block" /> Stylists</p>
        </div>
        <div class="group">
          <p class="text-2xl md:text-3xl font-light mb-2 text-[--color-gold] tracking-wider" role="img" aria-label="5 out of 5 stars">★★★★★</p>
          <p class="text-xs text-[--color-cream]/60 uppercase tracking-widest">5-Star<br class="hidden md:block" /> Reviews</p>
        </div>
        <div class="group">
          <p class="text-4xl md:text-5xl font-light mb-2 text-[--color-cream] group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">♥</p>
          <p class="text-xs text-[--color-cream]/60 uppercase tracking-widest">Downtown<br class="hidden md:block" /> Rolesville</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-32 px-6 bg-[--color-cream-dark]">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center max-w-2xl mx-auto mb-20">
        <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Our Services</span>
        <h2 class="display-md mb-6" style="font-family: var(--font-display);">
          Crafted with care, tailored to you
        </h2>
        <p class="text-[--color-taupe] text-lg">
          From precision cuts to stunning color transformations
        </p>
      </div>

      <!-- Service Cards -->
      <div class="grid md:grid-cols-3 gap-10 mb-16" data-stagger="0.15">
        <!-- Haircuts -->
        <a href="/services#haircuts" class="group card p-12 text-center hover-lift rounded-2xl relative overflow-hidden" data-tilt="8">
          <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-transparent via-[--color-gold] to-transparent opacity-60 group-hover:opacity-100 transition-opacity"></div>
          <div class="w-20 h-20 mx-auto mb-8 rounded-2xl bg-gradient-to-br from-[--color-gold]/15 to-[--color-gold]/5 flex items-center justify-center icon-ring-gold transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-10 h-10 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.121 14.121L19 19m-7-7l7-7m-7 7l-2.879 2.879M12 12L9.121 9.121m0 5.758a3 3 0 10-4.243 4.243 3 3 0 004.243-4.243zm0-5.758a3 3 0 10-4.243-4.243 3 3 0 004.243 4.243z"/>
            </svg>
          </div>
          <h3 class="text-2xl mb-4 group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">Haircuts</h3>
          <p class="text-[--color-taupe] mb-8 leading-relaxed">Precision cuts tailored to your unique style, face shape, and lifestyle.</p>
          <p class="text-3xl font-light text-[--color-charcoal] group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">From <span class="font-medium">$30</span></p>
        </a>

        <!-- Color -->
        <a href="/services#color" class="group card p-12 text-center hover-lift rounded-2xl relative overflow-hidden md:translate-y-6" data-tilt="8">
          <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-transparent via-[--color-blush] to-transparent opacity-60 group-hover:opacity-100 transition-opacity"></div>
          <div class="w-20 h-20 mx-auto mb-8 rounded-2xl bg-gradient-to-br from-[--color-blush]/30 to-[--color-blush]/10 flex items-center justify-center icon-ring-gold transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-10 h-10 text-[--color-taupe] group-hover:text-[--color-gold] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
            </svg>
          </div>
          <h3 class="text-2xl mb-4 group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">Hair Color</h3>
          <p class="text-[--color-taupe] mb-8 leading-relaxed">From subtle highlights to bold transformations that turn heads.</p>
          <p class="text-3xl font-light text-[--color-charcoal] group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">From <span class="font-medium">$95</span></p>
        </a>

        <!-- Treatments -->
        <a href="/services#extras" class="group card p-12 text-center hover-lift rounded-2xl relative overflow-hidden" data-tilt="8">
          <div class="absolute inset-x-0 top-0 h-1 bg-gradient-to-r from-transparent via-[--color-taupe] to-transparent opacity-40 group-hover:opacity-80 transition-opacity"></div>
          <div class="w-20 h-20 mx-auto mb-8 rounded-2xl bg-gradient-to-br from-[--color-taupe]/15 to-[--color-taupe]/5 flex items-center justify-center icon-ring-gold transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-10 h-10 text-[--color-taupe] group-hover:text-[--color-gold] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-2xl mb-4 group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">Treatments</h3>
          <p class="text-[--color-taupe] mb-8 leading-relaxed">Brazilian blowouts and specialty treatments for silky, frizz-free hair.</p>
          <p class="text-3xl font-light text-[--color-charcoal] group-hover:text-[--color-gold] transition-colors" style="font-family: var(--font-display);">From <span class="font-medium">$325</span></p>
        </a>
      </div>

      <div class="text-center" data-reveal>
        <a href="/services" class="btn btn-outline" data-magnetic>
          View Full Menu
        </a>
      </div>
    </div>
  </section>

  <!-- Stylists Preview -->
  <section class="py-32 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {stylists.map((stylist) => (
          <div class="group relative overflow-hidden bg-[--color-cream-dark] border-glow-gold">
            <div class="aspect-square">
              <img
                src={stylist.image}
                alt={`${stylist.fullName}, ${stylist.role}`}
                class:list={[
                  'w-full h-full object-cover transition-transform duration-700 group-hover:scale-105',
                  stylist.imagePosition,
                ]}
              />
            </div>
            <!-- Gradient overlay for text legibility -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 via-40% to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-8 text-white">
              <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-2 block font-bold">
                {stylist.role}
              </span>
              <h3 class="text-3xl mb-2 text-white" style="font-family: var(--font-display);">
                {stylist.fullName}
              </h3>
              <NextSlotBadge calendarId={stylist.id} class="mb-4" />
              <a
                href={stylist.bookingUrl}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Book appointment with ${stylist.name} (opens in new window)`}
                class="btn bg-[--color-gold] text-[--color-charcoal] border-[--color-gold] hover:bg-[--color-gold-light] hover:border-[--color-gold-light] hover:shadow-[0_0_30px_rgba(196,169,98,0.4)] transition-all duration-300"
              >
                Book with {stylist.name}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-32 px-6 bg-[--color-cream-dark]">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-20">
        <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">What Clients Say</span>
        <h2 class="display-md" style="font-family: var(--font-display);">
          Loved by our community
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-10">
        <div class="group bg-white p-10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2 relative">
          <!-- Decorative quote -->
          <div class="absolute -top-4 left-8 w-10 h-10 bg-[--color-gold] rounded-full flex items-center justify-center shadow-lg">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>
          <div class="flex gap-1 mb-6 text-[--color-gold] text-xl" role="img" aria-label="5 out of 5 stars">
            <span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span>
          </div>
          <p class="text-[--color-charcoal-light] mb-8 text-lg leading-relaxed" style="font-family: var(--font-display);">
            "Virginia is amazing! She listens to what you want and delivers every time. I've been coming here for years and wouldn't go anywhere else."
          </p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-[--color-gold]/10 flex items-center justify-center">
              <span class="text-[--color-gold] font-medium">S</span>
            </div>
            <div>
              <p class="font-medium text-[--color-charcoal]">Sarah M.</p>
              <p class="text-sm text-[--color-taupe]">Loyal client</p>
            </div>
          </div>
        </div>

        <div class="group bg-white p-10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2 relative md:translate-y-4">
          <!-- Decorative quote -->
          <div class="absolute -top-4 left-8 w-10 h-10 bg-[--color-gold] rounded-full flex items-center justify-center shadow-lg">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>
          <div class="flex gap-1 mb-6 text-[--color-gold] text-xl" role="img" aria-label="5 out of 5 stars">
            <span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span>
          </div>
          <p class="text-[--color-charcoal-light] mb-8 text-lg leading-relaxed" style="font-family: var(--font-display);">
            "Best salon in Rolesville! Kim did an incredible job with my highlights. The atmosphere is so welcoming and relaxing."
          </p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-[--color-gold]/10 flex items-center justify-center">
              <span class="text-[--color-gold] font-medium">J</span>
            </div>
            <div>
              <p class="font-medium text-[--color-charcoal]">Jennifer L.</p>
              <p class="text-sm text-[--color-taupe]">Loyal client</p>
            </div>
          </div>
        </div>

        <div class="group bg-white p-10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-500 hover:-translate-y-2 relative">
          <!-- Decorative quote -->
          <div class="absolute -top-4 left-8 w-10 h-10 bg-[--color-gold] rounded-full flex items-center justify-center shadow-lg">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>
          <div class="flex gap-1 mb-6 text-[--color-gold] text-xl" role="img" aria-label="5 out of 5 stars">
            <span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span><span aria-hidden="true">★</span>
          </div>
          <p class="text-[--color-charcoal-light] mb-8 text-lg leading-relaxed" style="font-family: var(--font-display);">
            "Alyssa transformed my hair! Her color work is truly artistic. I get compliments everywhere I go now."
          </p>
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-[--color-gold]/10 flex items-center justify-center">
              <span class="text-[--color-gold] font-medium">M</span>
            </div>
            <div>
              <p class="font-medium text-[--color-charcoal]">Michelle R.</p>
              <p class="text-sm text-[--color-taupe]">Loyal client</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Hours & Location -->
  <section class="py-32 px-6 bg-[--color-charcoal] text-[--color-cream]">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Hours -->
        <div>
          <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Hours</span>
          <h2 class="display-md mb-12" style="font-family: var(--font-display);">
            When to find us
          </h2>

          <div class="space-y-4 text-lg">
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light] text-[--color-taupe]">
              <span>Monday</span>
              <span>Closed</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Tuesday</span>
              <span>9:30 AM – 5:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Wednesday</span>
              <span>9:30 AM – 4:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Thursday</span>
              <span>9:30 AM – 6:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light]">
              <span>Friday</span>
              <span>9:30 AM – 2:00 PM</span>
            </div>
            <div class="flex justify-between py-3 border-b border-[--color-charcoal-light] text-[--color-taupe]">
              <span>Saturday – Sunday</span>
              <span>Closed</span>
            </div>
          </div>
        </div>

        <!-- Location -->
        <div>
          <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Location</span>
          <h2 class="display-md mb-12" style="font-family: var(--font-display);">
            Where to find us
          </h2>

          <address class="not-italic text-xl text-[--color-cream]/80 mb-8 leading-relaxed">
            104 South Main Street<br />
            Rolesville, NC 27571
          </address>

          <div class="space-y-4 mb-10">
            <a href="tel:9196718353" class="block text-xl hover:text-[--color-gold] transition-colors">
              (919) 671-8353
            </a>
            <a href="mailto:vacohairstudio@gmail.com" class="block text-xl hover:text-[--color-gold] transition-colors">
              vacohairstudio@gmail.com
            </a>
          </div>

          <a
            href="https://www.google.com/maps/search/?api=1&query=104+South+Main+Street+Rolesville+NC+27571"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Get directions to Virginia Page & Co. on Google Maps (opens in new window)"
            class="btn btn-outline border-[--color-cream] text-[--color-cream] hover:bg-[--color-cream] hover:text-[--color-charcoal]"
          >
            Get Directions
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Transition -->
  <div class="h-24 bg-gradient-to-b from-[--color-charcoal] to-[--color-cream-dark]"></div>

  <!-- Instagram Section -->
  <section class="py-24 px-6 bg-[--color-cream-dark]">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center max-w-2xl mx-auto mb-16">
        <span class="text-xs tracking-widest uppercase text-[--color-gold] mb-4 block">Follow Along</span>
        <h2 class="display-md mb-6" style="font-family: var(--font-display);">
          @vahairco
        </h2>
        <p class="text-[--color-taupe] text-lg">
          See our latest work and get inspired for your next look
        </p>
      </div>

      <div class="text-center">
        <a href="https://instagram.com/vahairco" target="_blank" rel="noopener noreferrer" class="btn btn-outline" data-magnetic aria-label="Follow Virginia Page & Co. on Instagram (opens in new window)">
          Follow on Instagram
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-32 px-6 text-center bg-gradient-to-b from-[--color-cream-dark] to-[--color-cream] relative overflow-hidden">
    <!-- Ambient gold glow background -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 rounded-full bg-[--color-gold]/10 blur-3xl"></div>
    </div>
    <div class="max-w-3xl mx-auto relative">
      <div class="divider mx-auto mb-8"></div>
      <h2 class="display-lg mb-8 text-balance text-glow-gold" style="font-family: var(--font-display);">
        Ready for your transformation?
      </h2>
      <p class="text-xl text-[--color-taupe] mb-12 max-w-xl mx-auto">
        Book your appointment today and let us help you feel beautiful.
      </p>
      <a href="/book" class="btn btn-primary text-base px-10 py-4 glow-pulse hover:shadow-[0_0_40px_rgba(196,169,98,0.5)]">
        Book Your Appointment
      </a>
    </div>
  </section>
</Layout>
