---
import Layout from '../layouts/Layout.astro';
import { getAllStylists } from '../lib/data/stylists';

// Use centralized stylist data
const stylists = getAllStylists();
---

<Layout
  title="Book Online | Virginia Page & Co. Hair Studio"
  description="Schedule your next hair appointment online. Choose your stylist and service for instant booking."
>
  <!-- Compact Hero -->
  <section class="pt-12 pb-8 px-6 relative overflow-hidden">
    <div class="max-w-4xl mx-auto text-center relative">
      <h1 class="display-lg mb-4 animate-fade-up" style="font-family: var(--font-display); animation-delay: 0.1s;">
        Book Your Appointment
      </h1>
      <p class="text-lg text-[--color-taupe] max-w-2xl mx-auto mb-6 animate-fade-up" style="animation-delay: 0.2s;">
        Select your stylist to get started, or browse all available times below.
      </p>

      <!-- Stylist quick-select buttons -->
      <div class="flex flex-wrap justify-center gap-3 animate-fade-up" style="animation-delay: 0.3s;">
        <button
          type="button"
          data-stylist="all"
          class="quick-book-btn filter-pill active"
        >
          All Stylists
        </button>
        {stylists.map((stylist) => (
          <button
            type="button"
            data-stylist={stylist.name.toLowerCase()}
            aria-label={`Book appointment with ${stylist.name}`}
            class="quick-book-btn filter-pill"
          >
            {stylist.name}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Acuity Embed -->
  <section class="pb-12 px-6 bg-[--color-cream]" id="scheduler">
    <div class="max-w-5xl mx-auto">
      <div class="relative">
        <!-- Decorative border -->
        <div class="absolute -inset-3 bg-gradient-to-r from-[--color-gold]/20 via-[--color-blush]/20 to-[--color-gold]/20 rounded-2xl blur-sm"></div>
        <div class="acuity-container relative bg-[--color-cream] rounded-xl shadow-2xl shadow-[--color-charcoal]/5 overflow-hidden">
          <iframe
            id="acuity-embed"
            src="https://app.acuityscheduling.com/schedule.php?owner=38274584"
            title="Schedule Appointment with Virginia Page & Co. Hair Studio"
            width="100%"
            frameBorder="0"
            loading="lazy"
            class="acuity-iframe w-full"
          ></iframe>

          <!-- Loading overlay -->
          <div id="acuity-loader" class="absolute inset-0 bg-white/90 flex items-center justify-center transition-opacity duration-500">
            <div class="text-center">
              <div class="w-12 h-12 border-4 border-[--color-gold]/20 border-t-[--color-gold] rounded-full animate-spin mx-auto mb-4"></div>
              <p class="text-[--color-taupe] text-sm">Loading scheduler...</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Info Cards with icons -->
  <section class="py-20 px-6 bg-[--color-cream-dark]">
    <div class="max-w-5xl mx-auto">
      <div class="grid md:grid-cols-3 gap-8" data-stagger="0.1">
        <!-- Questions -->
        <div class="info-card group text-center p-8 bg-white rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-tilt="5">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[--color-gold]/10 to-[--color-blush]/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-7 h-7 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3 transition-colors duration-300 group-hover:text-[--color-gold]" style="font-family: var(--font-display);">Questions?</h3>
          <p class="text-[--color-taupe] mb-4">Give us a call</p>
          <a href="tel:9196718353" class="text-lg font-medium hover:text-[--color-gold] transition-colors inline-flex items-center gap-2">
            (919) 671-8353
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <!-- Location -->
        <div class="info-card group text-center p-8 bg-white rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-tilt="5">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[--color-gold]/10 to-[--color-blush]/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-7 h-7 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3 transition-colors duration-300 group-hover:text-[--color-gold]" style="font-family: var(--font-display);">Location</h3>
          <address class="text-[--color-taupe] not-italic">
            104 South Main Street<br />
            Rolesville, NC 27571
          </address>
        </div>

        <!-- Cancellations -->
        <div class="info-card group text-center p-8 bg-white rounded-xl transition-all duration-300 hover:shadow-xl hover:-translate-y-1" data-tilt="5">
          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-[--color-gold]/10 to-[--color-blush]/10 flex items-center justify-center transition-transform duration-300 group-hover:scale-110 group-hover:rotate-3">
            <svg class="w-7 h-7 text-[--color-gold]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl mb-3 transition-colors duration-300 group-hover:text-[--color-gold]" style="font-family: var(--font-display);">Cancellations</h3>
          <p class="text-[--color-taupe]">
            Need to reschedule?<br />
            Use the link in your confirmation email.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Fade up animation */
  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    animation: fade-up 0.6s ease-out forwards;
    opacity: 0;
  }

  /* Responsive Acuity iframe */
  .acuity-container {
    min-height: 600px;
    position: relative;
  }

  .acuity-iframe {
    border: none;
    height: calc(100svh - 120px);
    min-height: 600px;
    max-height: 1000px;
  }

  @media (min-width: 768px) {
    .acuity-container {
      min-height: 800px;
    }
    .acuity-iframe {
      height: 900px;
      min-height: 800px;
    }
  }

  /* Stylist filter pills */
  .filter-pill {
    padding: 0.625rem 1.5rem;
    border-radius: 9999px;
    border: 1.5px solid var(--color-cream-dark);
    background: white;
    color: var(--color-charcoal);
    font-size: 0.9375rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .filter-pill:hover {
    border-color: var(--color-gold);
    background: var(--color-gold)/10;
  }

  .filter-pill.active {
    background: var(--color-gold);
    border-color: var(--color-gold);
    color: white;
  }
</style>

<script>
  // Stylist calendar IDs
  const CALENDARS: Record<string, string> = {
    all: '',
    virginia: '13484734',
    kim: '13484780',
    alyssa: '13484805'
  };

  // Hide loader when iframe loads
  const iframe = document.getElementById('acuity-embed') as HTMLIFrameElement;
  const loader = document.getElementById('acuity-loader');

  if (iframe && loader) {
    iframe.addEventListener('load', () => {
      setTimeout(() => {
        loader.style.opacity = '0';
        setTimeout(() => loader.style.display = 'none', 500);
      }, 500);
    });
  }

  // Handle stylist filter selection
  function updateScheduler(stylistKey: string) {
    const calendarId = CALENDARS[stylistKey] || '';
    const baseUrl = 'https://app.acuityscheduling.com/schedule.php?owner=38274584';
    const newUrl = calendarId ? `${baseUrl}&calendarID=${calendarId}` : baseUrl;

    if (iframe) {
      // Show loader
      if (loader) {
        loader.style.display = 'flex';
        loader.style.opacity = '1';
      }
      iframe.src = newUrl;
    }

    // Update active button
    document.querySelectorAll('.quick-book-btn').forEach(btn => {
      btn.classList.remove('active');
    });
    const activeBtn = document.querySelector(`[data-stylist="${stylistKey}"]`);
    if (activeBtn) activeBtn.classList.add('active');
  }

  // Attach click handlers to quick book buttons
  document.querySelectorAll('.quick-book-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      const stylistKey = target.dataset.stylist || 'all';
      updateScheduler(stylistKey);

      // Smooth scroll to scheduler section
      const schedulerSection = document.getElementById('scheduler');
      if (schedulerSection) {
        schedulerSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });

  // Check for URL params to pre-select stylist
  const urlParams = new URLSearchParams(window.location.search);
  const stylistParam = urlParams.get('stylist');
  if (stylistParam && CALENDARS[stylistParam]) {
    updateScheduler(stylistParam);
  }
</script>
